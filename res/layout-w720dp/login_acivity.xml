<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="160dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/BLANK"
                android:scaleType="fitXY"
                android:src="@drawable/logo_login" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="280dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/devider_login" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:paddingTop="120dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@color/OrangeAppolis"
                android:textSize="32sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_edt_white"
                android:drawableRight="@drawable/ic_login"
                android:hint="@string/login"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:singleLine="true"
                android:textColorHint="@color/Black13"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edt_pin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edt_white"
                    android:drawableRight="@drawable/ic_pin"
                    android:hint="@string/pin"
                    android:imeOptions="actionDone"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:textColorHint="@color/Black13"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edt_site"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edt_white"
                    android:drawableRight="@drawable/ic_site"
                    android:hint="@string/site"
                    android:imeOptions="actionDone"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:textColorHint="@color/Black13"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="right" >

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/background_button_cancel_gray"
                    android:text="@string/text_btn_cancel"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_ok_orange"
                    android:text="@string/text_btn_ok"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linTip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transBlack"
        android:orientation="vertical"
        android:clickable="true"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="18dp"
            android:layout_marginTop="18dp"
            android:contentDescription="@string/BLANK"
            android:scaleType="fitXY"
            android:src="@drawable/ic_cancel" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="280dp"
            android:layout_marginTop="260dp"
            android:contentDescription="@string/BLANK"
            android:scaleType="fitXY"
            android:src="@drawable/ic_arrow_three" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="180dp"
            android:text="@string/ENTER_YOUR_SITE_HERE"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </LinearLayout>

</FrameLayout>