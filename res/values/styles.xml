<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="textStyleLabel">
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="textJobDetailStyleLabel">
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="textStyleLabelBold">
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyleLabelLogin">
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyleHead">
        <item name="android:textSize">24dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="textStyleHeadManager">
        <item name="android:textSize">22dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="textStyleBotton">
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_height">40dip</item>
    </style>

    <style name="textStyleBottonLogin">
        <item name="android:textSize">22dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="textStyleSearchHint">
        <item name="android:textColorHint">#000</item>
    </style>

    <style name="Dialog_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
	
    <style name="appolisHoloDialog" parent="android:Theme.Holo.Dialog" >
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- <item name="android:windowTitleStyle">@android:style/DialogWindowTitle.Holo</item> -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>
    
</resources>