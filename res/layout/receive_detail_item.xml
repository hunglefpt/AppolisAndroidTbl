<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp">
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:layout_marginRight="5dp"
	    android:orientation="vertical">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:id="@+id/tv_receive_item_number"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="left"
	            android:textColor="@color/Black"
	            android:textSize="16sp"
	            android:textStyle="bold"
	            android:text="PO3001"/>
	        
	        <TextView 
	            android:id="@+id/tv_receive_item_weight"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:gravity="right"
	            android:textColor="@color/Black"
	            android:textSize="16sp"
	            android:textStyle="bold"
	            android:text="12"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="5dp"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:id="@+id/tv_receive_item_bin"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="left"
	            android:textColor="@color/Black"
	            android:textSize="16sp"
	            android:textStyle="bold"
	            android:text="Bin:"/>
	        
	        <TextView 
	           	android:id="@+id/tv_receive_item_uom_type"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:gravity="right"
	            android:textColor="@color/Black"
	            android:textSize="16sp"
	            android:textStyle="bold"
	            android:text="EA"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="2dp"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:id="@+id/tv_receive_item_lot"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:singleLine="true"
	            android:ellipsize="end"
	            android:gravity="left"
	            android:textColor="@color/Black"
	            android:textSize="16sp"
	            android:text="Lots:"/>
	        
	        <TextView 
	             android:id="@+id/tv_receive_item_lot_weight"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:gravity="right"
	            android:textColor="@color/Red1"
	            android:textSize="16sp"
	            android:textStyle="bold"
	            android:text="11"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="2dp"
	        android:gravity="center_vertical">
	        
	        <TextView 
	            android:id="@+id/tv_receive_item_exp_date"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="left"
	            android:textColor="@color/Black"
	            android:textSize="16sp"
	            android:text="Exp date: 2014"/>
	        
	        <TextView 
	             android:id="@+id/tv_damaged"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:gravity="right"
	            android:textColor="@color/Red1"
	            android:textSize="16sp"
	            android:textStyle="bold"
	            android:text="Damaged: 1"/>
	    </LinearLayout>
	</LinearLayout>
	
	<ImageView 
	    android:id="@+id/img_disclosure_indicator"
	    android:layout_width="16dp"
	    android:layout_height="16dp"
	    android:layout_weight="1"
	    android:layout_gravity="top"
	    android:layout_marginTop="10dp"
	    android:src="@drawable/disclosure_indicator"/>
</LinearLayout>
