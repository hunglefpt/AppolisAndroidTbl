<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnCycleCountItem"
    android:layout_width="fill_parent"
    android:baselineAligned="false"
    android:layout_height="wrap_content"
    android:background="@color/Gray73"
    android:paddingBottom="10dp"
    android:weightSum="10"
    android:paddingTop="5dp"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:layout_weight="2.8"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/tvBinNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/Black"/>
        
        <TextView
            android:id="@+id/tvBinDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/Black"/>
        
    </LinearLayout>
    
   <LinearLayout
       android:layout_weight="3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="bottom"
       android:orientation="vertical" >

	   <TextView
	      android:id="@+id/tvLot"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:textSize="16sp"
	      android:gravity="bottom"
	      android:textColor="@color/Black"/>
          
   </LinearLayout>
     
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="bottom"
       android:layout_weight="2"
       android:orientation="horizontal">
	   
	    <TextView 
	        android:id="@+id/tvBinStatus"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_gravity="bottom"
	        android:paddingRight="20dp"
	        android:text="@string/COMMON_COMPLETED"
	        android:textSize="16sp"
	        android:textColor="@color/green" />
       
	    <ImageView 
	        android:id="@+id/imgCycleInfor" 
	        android:layout_height="wrap_content"
	        android:paddingLeft="10dp"
	        android:visibility="invisible"
	        android:layout_width="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/img_info_cycle_icon"/>
	    
	     <ImageView 
	        android:id="@+id/imgCycleNextScreen" 
	        android:layout_height="22dp"
	        android:paddingLeft="10dp"
	        android:visibility="invisible"
	        android:layout_width="22dp"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/disclosure_indicator"/>
    </LinearLayout>
</LinearLayout>
